{% extends "cp/_cp_layout.html.twig" %}

{% set page_title = 'Edit release: ' ~ release.name ~ ' - AdminCP' %}

{% block page %}

<div class="content-box bg-keeper bd-keeper">
    <div class="content-header" style="display: flex; flex-direction: row; justify-content: space-between;">
        <h2>Edit release: {{ release.name }}</h2>
    </div>
    <div class="content-body">

        <form action="/admin/releases/{{ release.id }}" method="POST" enctype="multipart/form-data">

            <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
            <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">

            <div class="form-group">
                <label for="name">
                    Name
                </label>
                <input type="text" class="form-control text-muted" value="{{ release.name }}" readonly />
            </div>

            <div class="form-group">
                <label for="news">
                    Linked News Post
                </label>
                <select class="form-control form-select" id="news" name="news" required>
                    <option value="0" {% if release.linkedNewsPost is null %}selected{% endif %}>None</option>
                    {% if news_articles|length > 0 %}
                        {% for article in news_articles %}
                            <option value="{{ article.id }}" {% if release.linkedNewsPost is not null and release.linkedNewsPost.id == article.id %}selected{% endif %}>
                                {{ article.title }}
                            </option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>

            {# Mirrors #}
            <div class="form-group">
                <label for="mirrors">
                    Mirrors
                </label>
                <div id="mirrors">
                    {% for mirror in release.mirrors %}
                        {% include 'admincp/releases/_release_mirror.widget.html.twig' with { value: mirror.url } %}
                    {% endfor %}
                </div>
                <div class="mt-1 p-2">
                    <a href="#" id="add-mirror">Add mirror...</a>
                </div>
            </div>

            <div class="d-flex" style="margin-top: 15px;">
                <div class="pull-right">
                    <button type="submit" class="btn btn-medieval">Edit</button>
                </div>
            </div>

        </form>

    </div>
</div>

<template id="release-mirror">
    {% include 'admincp/releases/_release_mirror.widget.html.twig' %}
</template>

{% include 'markdown.format.html.twig' %}

{% endblock %}

{% block body_javascript %}
<script>

    // Add mirror
    $('#add-mirror').on('click', function(e){

        e.preventDefault();

        // Add release mirror template to mirror list
        $('#mirrors').append($('#release-mirror').html());
    });

    // Remove mirror
    $('body').on('click', function(e){

        // Make sure it's the mirror remove button
        let $target = $(e.target);
        if(!$target.data('mirror-remove')){
            return true;
        }

        e.preventDefault();

        // Remove the mirror
        $target.parent().remove();
    });

</script>
{% endblock %}
