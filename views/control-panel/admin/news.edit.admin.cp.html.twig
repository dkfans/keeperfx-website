{% extends "core/_control-panel.html.twig" %}

{% block title %}Edit news article - Admin{% endblock %}

{% block page %}

<div class="content-box bg-keeper bd-keeper">
    <div class="content-header" style="display: flex; flex-direction: row; justify-content: space-between;">
        <h2>Create new article</h2>
    </div>
    <div class="content-body">

        <p>
            News articles use the markdown format.
        </p>

        <form action="/admin/news/{{ article.id }}" method="POST">

            <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
            <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">

            <input type="text" class="form-control" placeholder="Title" name="title" value="{{ article.title }}" />

            <p style="margin-top: 10px;">
                URL title slug: {{ article.titleSlug }}<br />
                Author: {{ article.author.username }}
            </p>

            <textarea class="form-control" name="contents" rows="12" placeholder="Content" style="margin-top: 15px;">{{ article.text }}</textarea>

            <div class="pull-right">

                <input type="submit" class="btn btn-medieval" style="margin-top: 15px;" value="Edit" />

            </div>

        </form>

    </div>
</div>

{% endblock %}
