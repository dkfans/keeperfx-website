{% extends "workshop/_workshop_layout.html.twig" %}

{% set page_title = 'Edit files - ' ~ workshop_item.name ~ ' - Workshop' %}

{% block workshop_content %}

    <div class="content-box bg-keeper bd-keeper">
        <div class="content-header">
        <div class="row">
            <div class="row">

            </div>
            <div class="row">

            </div>
        </div>
            <h2>Edit files: {{ workshop_item.name }}</h2>
                <div class="pull-right">
                <a href="/workshop/item/{{ workshop_item.id }}/{{ workshop_item.name|slugify }}" >
                    Back to workshop item
                </a>
                </div>
        </div>

        <div class="content-body">

                <form action="/workshop/edit/{{ workshop_item.id }}/files" method="POST" enctype="multipart/form-data" id="edit-item-form">

                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}" />
                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}" />


                    <div class="row" style="margin-bottom: 30px;">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label for="file">
                                    File
                                    <span class="text-danger">
                                        *
                                    </span>
                                </label>
                                <input type="file" class="form-control" id="file" name="file" required>
                            </div>
                        </div>
                        <div class="col-sm-2" style="padding-top: 35px;">
                            <button type="submit" class="btn btn-medieval" style="width: 100%;">Upload</button>
                        </div>
                    </div>

                </form>


                <table class="table" style="margin-bottom: 0px;">
                    <thead>
                        <tr>
                            <th>File</th>
                            <th>Downloads</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for file in workshop_item.files %}
                            <tr>
                                <td style="padding-top: 15px"><a href="/workshop/download/{{ workshop_item.id }}/{{ file.id }}/{{ file.filename|url_encode }}">{{ file.filename }}</td>
                                <td style="padding-top: 15px">{{ file.downloadCount }}</td>
                                <td style="padding-top: 15px">{{ file.createdTimestamp|date('Y-m-d') }}</td>
                                <td>
                                    <a href="/workshop/edit/{{ workshop_item.id }}/files/{{ file.id }}/delete/{{ csrf.name }}/{{ csrf.value }}">
                                        <button
                                            class="btn btn-medieval btn-medieval-gray"
                                            onclick="if (confirm('Are you sure you want to delete this file?')){return true;}else{event.stopPropagation(); event.preventDefault();};"
                                        >
                                        Delete
                                    </button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </form>

        </div>
    </div>

{% endblock %}


{% block body_javascript %}

<script>
$(function(){
    // Item max upload filesize check
    $('#file').on('change', function(){
        fileFileSize = 0;
        if(this.files[0].size > app_store.upload_limit.workshop_item.size){
            toastr.warning('File exceeds maximum filesize of ' + app_store.upload_limit.workshop_item.formatted);
            this.value = null;
        }
    });
});
</script>

{% endblock %}
